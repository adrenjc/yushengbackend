{
  "name": "smart-match-api",
  "version": "1.0.0",
  "description": "智能商品匹配系统后端API",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "seed": "node scripts/seed-data.js",
    "clean-db": "node scripts/clean-database.js",
    "init-db": "node scripts/init-database.js",
    "setup": "npm install && npm run clean-db && npm run init-db",
    "cleanup": "node scripts/cleanup-files.js",
    "cleanup:report": "node scripts/cleanup-files.js --report",
    "cleanup:dry-run": "node scripts/cleanup-files.js --dry-run",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit"
  },
  "keywords": [
    "smart-match",
    "product-matching",
    "express",
    "mongodb"
  ],
  "author": "Smart Match Team",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bull": "^4.11.5",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^8.0.1",
    "fuzzy": "^0.1.3",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "redis": "^4.7.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
